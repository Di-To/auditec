// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Tree {
  id           Int      @id @default(autoincrement())
  details      Details?
  region       String
  municipality String
  park         String
  latitude     Decimal
  longitude    Decimal

}

model Details {
  id      Int      @id @default(autoincrement())
  tree    Tree     @relation(fields: [treeId], references: [id])
  treeId  Int      @unique
  picture String
  grade   Int
  time    DateTime
}
